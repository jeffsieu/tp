<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" spacing="4.0" styleClass="filter-chip" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="nameLabel" text="Label">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Label>
        <Button fx:id="removeButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" prefHeight="32.0"
                prefWidth="32.0" style="-fx-border: none;" text="x"/>
    </children>
    <padding>
        <Insets bottom="4.0" left="16.0" right="4.0" top="4.0"/>
    </padding>
</HBox>
